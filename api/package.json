{
  "name": "@phone-catalogue/api-types",
  "version": "1.0.0",
  "description": "Shared API types generated from OpenAPI specification",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/**",
    "spec.yaml"
  ],
  "scripts": {
    "generate": "npx @hey-api/openapi-ts -i ./spec.yaml -o ./generated",
    "build": "npm run generate && tsc -p tsconfig.build.json",
    "clean": "rm -rf dist generated",
    "dev": "npm run generate && tsc -p tsconfig.build.json --watch"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.82.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
